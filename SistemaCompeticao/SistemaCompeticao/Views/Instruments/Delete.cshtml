@model SistemaCompeticao.Models.Instrument

@{
    ViewBag.Title = "Deletar instrumento";
}

<h2>Deletar instrumento</h2>

<h3>Tem certeza que deseja deletar "@Html.DisplayFor(model => model.InstrumentType)"?</h3>
<div>
    <h4>Instrument</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => "Tipo de instrumento")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InstrumentType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => "Música")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Music.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model =>"Membro")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Member.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Listar instrumentos", "Index")
        </div>
    }
</div>
