@model SistemaCompeticao.Models.Instrument

@{
    ViewBag.Title = "Cadastrar instrumento";
}

<h2>Cadastrar instrumento</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.InstrumentType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.InstrumentType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InstrumentType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Music_idMusic, "Título da Música", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Music_idMusic", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Music_idMusic, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Member_idMember, "Nome do Membro", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Member_idMember", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Member_idMember, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-outline-dark" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Listar instrumentos", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
