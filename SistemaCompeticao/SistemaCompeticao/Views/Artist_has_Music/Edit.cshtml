@model SistemaCompeticao.Models.Artist_has_Music

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Participação</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idArtist_has_Music)

        <div class="form-group">
            @Html.LabelFor(model => model.Artist_idArtist, "Nome do Artista", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Artist_idArtist", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Artist_idArtist, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Music_idMusic, "Título da Música", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Music_idMusic", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Music_idMusic, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Listar participações", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
