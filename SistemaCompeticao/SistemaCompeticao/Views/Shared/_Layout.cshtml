<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>iMusic</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mt-0">
        @Html.ActionLink("iMusic", "Index", "Home", new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-link text-white">@Html.ActionLink("Músicas", "Index", "Musics")</li>
                <li class="nav-link text-white">@Html.ActionLink("Instrumentos", "Index", "Instruments")</li>
                <li class="nav-link text-white">@Html.ActionLink("Batalhas", "Index", "Battles")</li>
                <li class="nav-link text-white">@Html.ActionLink("Artistas", "Index", "Artists")</li>
                <li class="nav-link text-white">@Html.ActionLink("Membros", "Index", "Members")</li>
                <li class="nav-link text-white">@Html.ActionLink("Eventos", "Index", "Events")</li>
                <li class="nav-link text-white">@Html.ActionLink("Cadastros em Batalhas", "Index", "Artist_has_Competition")</li>
                <li class="nav-link text-white">@Html.ActionLink("Participações em Músicas", "Index", "Artist_has_Music")</li>
            </ul>
        </div>
    </nav>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Equipe iMusic (Lucas Ivars Ciziks, Miguel Shiniti Aguena, Paula Silva Gonzalez, Paulini Reis Procraci)</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
