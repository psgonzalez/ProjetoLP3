@model SistemaCompeticao.Models.Music

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>

<div>
    <h4>@Html.DisplayFor(model => model.Title)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => "Duração")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MusicLength)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => "Gênero musical")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.idMusic }) |
    @Html.ActionLink("Listar músicas", "Index")
