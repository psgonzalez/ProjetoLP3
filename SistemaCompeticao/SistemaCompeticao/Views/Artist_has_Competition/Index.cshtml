@model IEnumerable<SistemaCompeticao.Models.Artist_has_Competition>

@{
    ViewBag.Title = "Cadastros em Batalhas";
}

<h2>Lista de Cadastrados</h2>

<p>
    @Html.ActionLink("Cadastrar Artista em uma Batalha", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Artist.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Battle.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Artist.Name, "Details", "Artists", new { @id = item.Artist.idArtist }, null)
        </td>
        <td>
            @Html.ActionLink(item.Battle.Name, "Details", "Battles", new { @id = item.Battle.idBattle }, null)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idArtist_has_Competition }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.idArtist_has_Competition }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.idArtist_has_Competition })
        </td>
    </tr>
}

</table>
