@model SistemaCompeticao.Models.Artist

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>

<div>
    <h4>Artista</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => "Nome")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => "Ano de Formação")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FormationYear)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.idArtist }) |
    @Html.ActionLink("Voltar para Lista", "Index")
</p>
